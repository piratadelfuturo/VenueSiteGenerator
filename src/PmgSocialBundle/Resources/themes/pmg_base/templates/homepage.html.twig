{% set webspace_key = request.webspaceKey %}
{% set social_webspace_key = request.webspaceKey|replace({'_base' : '_social'} )%}
{% set corp_webspace_key = request.webspaceKey|replace({'_base' : '_corp'} )%}
{% if request.locale == 'en' %}
    {% set alter_locale = 'fr' %}
{% else %}
    {% set alter_locale = 'en' %}
{% endif %}

{% extends "PmgSocialBundle:views:master.html.twig" %}

{% block meta %}{% include "PmgSocialBundle:blocks:meta.html.twig" %}{% endblock %}

{% block content %}
<div class="container-fluid">
    <div class="row home-section">
        <div class="col-md-6 no-float big-block social">
            <img src="" />
            <a href="{{ sulu_content_path('/',social_webspace_key) }}">
                <span class="text">{%trans%}Social{%endtrans%}</span>
            </a>
        </div>
        <div class="col-md-6 no-float big-block corp">
            <img src="" />
            <a href="{{ sulu_content_path('/',corp_webspace_key) }}">
                <span class="text">{%trans%}Corporate{%endtrans%}</span>
            </a>
        </div>
    </div>
</div>
