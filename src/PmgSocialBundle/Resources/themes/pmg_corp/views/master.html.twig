<script>
$( ".box-1" ).click(function() {
 	$( "#showbox-1" ).fadeIn( "" );
	$( ".box-1" ).addClass( "active" );
	$( ".box-1" ).css( "z-index","12" );
	
	
});

$( ".close-btn" ).click(function() {
 	$( ".show-hide-box" ).fadeOut( "" );
	$( ".halss-menu-box" ).removeClass( "active" );
	$( ".halss-menu-box" ).css( "z-index","10" );
});
</script>
<script>
	$(function(){
		var venue, bannerimg;
		$('[data-imgsrc]').each(function(i, obj) {
		    bannerimg = $(this).data('imgsrc');
		    $(this).css('background-image', 'url("'+bannerimg+'")');
		});
		$('[data-venue]').hover(function(){
			venue = $(this).data('venue');
			$('.venue_ctn').addClass('inactive');
			$(this).removeClass('inactive');
			$('.'+venue).addClass('active');
		}, function(){
			$('.venue_ctn').removeClass('inactive');
			$('.'+venue).removeClass('active');
		});
	});
</script> 
<!-- tab script -->
<script type="text/javascript">

$(document).ready(function() {

	$(".tab_content").hide();
	$(".tab_content:first").show(); 

	$("ul.tabs li").click(function() {
		$("ul.tabs li").removeClass("active");
		$(this).addClass("active");
		$(".tab_content").hide();
		var activeTab = $(this).attr("rel"); 
		$("#"+activeTab).fadeIn(); 
	});
});

</script> 
{% endblock %}
    </body>
</html>
