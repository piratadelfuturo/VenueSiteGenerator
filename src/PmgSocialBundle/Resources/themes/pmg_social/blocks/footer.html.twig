{% set webspace_key = request.webspaceKey %}
<footer class="home-footer">
  <div class="footer-top-part">
  	<div class="footer-img"><img src="{{ asset('bundles/pmgsocial/pmg_social/'~webspace_key~'/images/footer-img.png') }}" alt="" /></div>
    <div class="row">
      <div class="col-sm-3 footer-logo">
          <a href="{{ sulu_content_root_path() }}">
              <img src="{{ asset('bundles/pmgsocial/pmg_social/'~webspace_key~'/images/logo.png') }}" alt="" />
          </a>
      </div>
      <div class="col-sm-9 footer-right">
        <div class="social-media">
            <a href=""><img alt="" src="{{ asset('bundles/pmgsocial/pmg_social/default/images/fb-icon.png') }}"></a>
            <a href=""><img alt="" src="{{ asset('bundles/pmgsocial/pmg_social/default/images/twitter-icon.png') }}"></a>
            <a href=""><img alt="" src="{{ asset('bundles/pmgsocial/pmg_social/default/images/linked-icon.png') }}"></a>
        </div>
        <div class="footer-nav">
          <ul>
            <li><a href="{{ sulu_content_root_path() }}">{% trans %} HOME {% endtrans %}</a></li>
            {% for item in sulu_navigation_root_tree('main') %}
            <li>
                <a href="{{ sulu_content_path(item.url) }}" title="{{ item.title }}">{{ item.title }}</a>
            </li>
            {% endfor %}
          </ul>
        </div>
      </div>
    </div>
  </div>
  <div class="copyright">
    <div class="footer-content">
      <div class="row">
        <div class="col-sm-4 copyright-text">{% trans %}2015 All rights reserved PMG group{% endtrans %}</div>
        <div class="col-sm-8 sponsor-logos">
        	<a href=""><img src="{{ asset('bundles/pmgsocial/pmg_social/default/images/sponsor-logo-1.png') }}" alt="" /></a>
            <a href=""><img src="{{ asset('bundles/pmgsocial/pmg_social/default/images/sponsor-logo-2.png') }}" alt="" /></a>
            <a href=""><img src="{{ asset('bundles/pmgsocial/pmg_social/default/images/sponsor-logo-3.png') }}" alt="" /></a>
