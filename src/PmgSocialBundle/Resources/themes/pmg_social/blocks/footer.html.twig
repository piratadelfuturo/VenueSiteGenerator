            <a href="{{ sulu_content_path('/','embassyplaza_social')}}"><img src="{{ asset('bundles/pmgsocial/pmg_social/default/images/sponsor-logo-4.png') }}" alt="" /></a>
            {# <a href=""><img src="{{ asset('bundles/pmgsocial/pmg_social/default/images/sponsor-logo-5.png') }}" alt="" /></a> #}
            <a href="{{ sulu_content_path('/','plazacentreville_social')}}"><img src="{{ asset('bundles/pmgsocial/pmg_social/default/images/sponsor-logo-6.png') }}" alt="" /></a>
            <a href="{{ sulu_content_path('/','plazagardeninn_social')}}"><img src="{{ asset('bundles/pmgsocial/pmg_social/default/images/sponsor-logo-7.png') }}" alt="" /></a>
