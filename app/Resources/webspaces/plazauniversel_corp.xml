<?xml version="1.0" encoding="utf-8"?>
<webspace xmlns="http://schemas.sulu.io/webspace/webspace"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://schemas.sulu.io/webspace/webspace http://schemas.sulu.io/webspace/webspace-1.0.xsd">

    <name>Plaza Universel CORP</name>
    <key>plazauniversel_corp</key>

<localizations>
        <localization language="en" />
        <localization language="fr" default="true" />
    </localizations>
    <theme>
        <key>pmg_corp</key>
        <default-templates>
            <default-template type="homepage">homepage_corp</default-template>
            <default-template type="page">complex</default-template>
        </default-templates>

        <error-templates>
            <error-template default="true">PmgSocialBundle:templates:error.html.twig</error-template>
            <error-template code="404">PmgSocialBundle:templates:error404.html.twig</error-template>
        </error-templates>
    </theme>

    <navigation>
        <contexts>
            <context key="main">
                <meta>
                    <title lang="fr">Principal navigation</title>
                    <title lang="en">Main navigation</title>
                </meta>
            </context>
        </contexts>
    </navigation>

    <portals>
        <portal>
            <name>Plaza Universel Corp</name>
            <key>plazauniversel_corp_default</key>
            <resource-locator>
                <strategy>tree</strategy>
            </resource-locator>

            <environments>
                <environment type="prod">
                    <urls>
                        <url>www.plazauniversel.com/{localization}/corp</url>
                        <url>new.plazauniversel.com/{localization}/corp</url>
                        <url>www.plazauniversel.con/{localization}/corp</url>
                    </urls>
                </environment>
                <environment type="stage">
                    <urls>
                        <url>new.plazauniversel.dev/stage/{localization}/corp</url>
                    </urls>
                </environment>
                <environment type="dev">
                    <urls>
                        <url>plazauniversel.dev/{localization}/corp</url>
                    </urls>
                </environment>
            </environments>
        </portal>
    </portals>
</webspace>
