<?xml version="1.0" encoding="utf-8"?>
<webspace xmlns="http://schemas.sulu.io/webspace/webspace"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://schemas.sulu.io/webspace/webspace http://schemas.sulu.io/webspace/webspace-1.0.xsd">

    <name>plaza garden inn CORP</name>
    <key>plazagardeninn_corp</key>

    <localizations>
        <localization language="en" />
        <localization language="fr" default="true"/>
    </localizations>

    <theme>
        <key>pmg_social</key>
        <default-templates>
            <default-template type="homepage">homepage</default-template>
            <default-template type="page">complex</default-template>
        </default-templates>

        <error-templates>
            <error-template default="true">PmgSocialBundle:templates:error.html.twig</error-template>
            <error-template code="404">PmgSocialBundle:templates:error404.html.twig</error-template>
        </error-templates>
    </theme>

    <navigation>
        <contexts>
            <context key="main">
                <meta>
                    <title lang="fr">Principalnavigation</title>
                    <title lang="en">Main navigation</title>
                </meta>
            </context>
        </contexts>
    </navigation>

    <portals>
        <portal>
            <name>plaza garden inn corp</name>
            <key>plazagardeninn_corp_default</key>
            <resource-locator>
                <strategy>tree</strategy>
            </resource-locator>

            <environments>
                <environment type="prod">
                    <urls>
                        <url>www.plazagardeninn.com/{localization}/corp</url>
                        <url>www.plazagardeninn.con/{localization}/corp</url>
                        <url>new.plazagardeninn.com/{localization}/corp</url>
                        <url>pg-pmg.echo.mx/{localization}/corp</url>
                        <url>pg-pmg.agenciabase.com.mx/{localization}/corp</url>
                    </urls>
                </environment>
                <environment type="stage">
                    <urls>
                        <url>www.plazagardeninn.dev/{localization}/corp</url>
                        <url>www-pg-pmg.echo.mx/{localization}/corp</url>
                    </urls>
                </environment>
                <environment type="dev">
                    <urls>
                        <url>plazagardeninn.dev/{localization}/corp</url>
                        <url>dev-pg-pmg.echo.mx/{localization}/corp</url>
                        <url>dev-pg-pmg.agenciabase.com.mx/{localization}/corp</url>
                    </urls>
                </environment>
            </environments>
        </portal>        
    </portals>
</webspace>
