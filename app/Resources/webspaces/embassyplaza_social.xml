<?xml version="1.0" encoding="utf-8"?>
<webspace xmlns="http://schemas.sulu.io/webspace/webspace"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://schemas.sulu.io/webspace/webspace http://schemas.sulu.io/webspace/webspace-1.0.xsd">

    <name>Embassy Plaza SOCIAL</name>
    <key>embassyplaza_social</key>

<localizations>
        <localization language="en" />
        <localization language="fr" default="true" />
    </localizations>

    <theme>
        <key>pmg_social</key>
        <default-templates>
            <default-template type="homepage">homepage</default-template>
            <default-template type="page">complex</default-template>
        </default-templates>

        <error-templates>
            <error-template default="true">PmgSocialBundle:templates:error.html.twig</error-template>
            <error-template code="404">PmgSocialBundle:templates:error404.html.twig</error-template>
        </error-templates>
    </theme>

    <navigation>
        <contexts>
            <context key="main">
                <meta>
                    <title lang="fr">Hauptnavigation</title>
                    <title lang="en">Main navigation</title>
                </meta>
            </context>
        </contexts>
    </navigation>

    <portals>
        <portal>
            <name>Embassy Plaza Social</name>
            <key>embassyplaza_social_default</key>
            <resource-locator>
                <strategy>tree</strategy>
            </resource-locator>

            <environments>
                <environment type="prod">
                    <urls>
                        <url>www.embassyplaza.com/{localization}/social</url>
                        <url>www.embassyplaza.con/{localization}/social</url>
                        <url>new.embassyplaza.com/{localization}/social</url>
                    </urls>
                </environment>
                <environment type="stage">
                    <urls>
                        <url>www.embassyplaza.dev/{localization}/social</url>
                    </urls>
                </environment>
                <environment type="dev">
                    <urls>
                        <url>embassyplaza.dev/{localization}/social</url>
                    </urls>
                </environment>
            </environments>
        </portal>        
    </portals>
</webspace>
