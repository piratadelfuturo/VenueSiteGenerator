<?xml version="1.0" ?>
<template xmlns="http://schemas.sulu.io/template/template"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://schemas.sulu.io/template/template http://schemas.sulu.io/template/template-1.0.xsd">

    <key>contact</key>

    <view>PmgSocialBundle:templates:contact</view>
    <controller>PmgSocialBundle:Default:contact</controller>
    <cacheLifetime>2400</cacheLifetime>

    <meta>
        <title lang="fr">Contact</title>
        <title lang="en">Contact</title>
    </meta>

    <properties>
        <section name="highlight">
            <properties>
                <property name="title" type="text_line" mandatory="true">
                    <meta>
                        <title lang="fr">Titel</title>
                        <title lang="en">Title</title>
                    </meta>
                    <params>
                        <param name="headline" value="true"/>
                    </params>

                    <tag name="sulu.rlp.part"/>
                </property>

                <property name="url" type="resource_locator" mandatory="true">
                    <meta>
                        <title lang="fr">Adresse</title>
                        <title lang="en">Resourcelocator</title>
                    </meta>

                    <tag name="sulu.rlp"/>
                </property>
            </properties>
        </section>

        <property name="location" type="location">
            <meta>
                <title lang="fr">Location</title>
                <title lang="en">Location</title>
            </meta>

        </property>
        
        <block name="phones" default-type="phone" minOccurs="0">
            <types>
                <type name="phone">
                    <properties>
                        <property name="phone" type="phone"></property>
                    </properties>
                </type>
            </types>
        </block>
        <block name="faxes" default-type="fax" minOccurs="0">
            <types>
                <type name="fax">
                    <properties>
                        <property name="phone" type="phone"></property>
                    </properties>
                </type>

            </types>            
        </block>
        <block name="emails" default-type="email" minOccurs="0">
            <types>
                <type name="email">
                    <properties>
                        <property name="email" type="email"></property>
                    </properties>
                </type>
            </types>
        </block>
    </properties>
</template>
