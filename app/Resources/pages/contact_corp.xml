<?xml version="1.0" ?>
<template xmlns="http://schemas.sulu.io/template/template"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://schemas.sulu.io/template/template http://schemas.sulu.io/template/template-1.0.xsd">

    <key>contact_corp</key>

    <view>PmgSocialBundle:templates:contact</view>
    <controller>PmgSocialBundle:Corp:contact</controller>
    <cacheLifetime>2400</cacheLifetime>

    <meta>
        <title lang="fr">Contact Corp</title>
        <title lang="en">Contact Corp</title>
    </meta>

    <properties>
        <section name="highlight">
            <properties>
                <property name="title" type="text_line" mandatory="true">
                    <meta>
                        <title lang="fr">Titel</title>
                        <title lang="en">Title</title>
                    </meta>
                    <params>
                        <param name="headline" value="true"/>
                    </params>

                    <tag name="sulu.rlp.part"/>
                </property>
                
                <property name="header_images" type="media_selection">
                    <meta>
                        <title lang="fr">Bilder</title>
                        <title lang="en">Images</title>
                    </meta>
                </property>


                <property name="url" type="resource_locator" mandatory="true">
                    <meta>
                        <title lang="fr">Adresse</title>
                        <title lang="en">Resourcelocator</title>
                    </meta>

                    <tag name="sulu.rlp"/>
                </property>
            </properties>
        </section>
        <section name="location_data">
            <properties>
                <property name="location" type="snippet">
                    <meta>
                        <title lang="fr">Location</title>
                        <title lang="en">Location</title>
                    </meta>

                    <params>
                        <param name="snippetType" value="location"/>
                    </params>
                </property>
            </properties>
        </section>
    </properties>
</template>
