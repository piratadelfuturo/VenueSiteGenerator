<?xml version="1.0" ?>

<template xmlns="http://schemas.sulu.io/template/template"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://schemas.sulu.io/template/template http://schemas.sulu.io/template/template-1.0.xsd">

    <key>menu_course</key>

    <meta>
        <title lang="fr">Menu Course</title>
        <title lang="en">Menu Course</title>
    </meta>

    <properties>
        <property name="title" type="text_line" mandatory="true">
            <meta>
                <title lang="fr">Titel</title>
                <title lang="en">Title</title>
            </meta>

            <tag name="sulu.node.name"/>
        </property>
        <block name="dishes" default-type="dish" minOccurs="0">
            <meta>
                <title lang="fr">Dishes</title>
                <title lang="en">Dishes</title>
            </meta>
            <types>
                <type name="dish">
                    <meta>
                        <title lang="fr">Dish</title>
                        <title lang="en">Dish</title>
                    </meta>
                    <properties>
                        <property name="name" type="text_line" mandatory="true">
                            <meta>
                                <title lang="fr">Nom</title>
                                <title lang="en">Name</title>
                            </meta>
                        </property>
                    </properties>
                </type>
            </types>
        </block>
    </properties>
</template>
