<?xml version="1.0" ?>

<template xmlns="http://schemas.sulu.io/template/template"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://schemas.sulu.io/template/template http://schemas.sulu.io/template/template-1.0.xsd">

    <key>hall_setups_corp</key>

    <meta>
        <title lang="fr">Hall Setups Corp</title>
        <title lang="en">Hall Setups Corp</title>
    </meta>

    <properties>
        <property name="title" type="text_line" mandatory="true">
            <meta>
                <title lang="fr">Titel</title>
                <title lang="en">Title</title>
            </meta>

            <tag name="sulu.node.name"/>
        </property>
        <section name="setups_section">
            <meta>
                <title lang="fr">Setups List</title>
                <title lang="en">Setups List</title>
            </meta>

            <properties>        
                <block name="setups" default-type="setup" minOccurs="0">
                    <types>
                        <type name="setup">
                            <properties>
                                <property name="title" type="text_line"></property>
                                <property name="image" type="media_selection">
                                    <meta>
                                        <title lang="fr">Bilder</title>
                                        <title lang="en">images</title>
                                    </meta>
                                    <params>
                                        <param name="types" value="image"/>
                                    </params>
                                </property>
                            </properties>
                        </type>
                    </types>
                </block>
            </properties>
        </section>
    </properties>
</template>
